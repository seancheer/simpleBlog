	<!-- interceptor相关 -->
	<mvc:interceptors>
		<bean id="commonInterceptor"
			class="com.seancheer.interceptor.ACLInterceptor"></bean>

		<bean id="sessionInterceptor"
			class="com.seancheer.interceptor.SessionInterceptor"></bean>

		<!-- <mvc:interceptor> <mvc:mapping path="/test/number.do" /> -->
		<!-- 定义在mvc:interceptor下面的表示是对特定的请求才进行拦截的 -->
		<!-- <bean class="com.host.app.web.interceptor.LoginInterceptor" /> </mvc:interceptor> -->
	</mvc:interceptors>

	<bean
		class="org.springframework.web.servlet.mvc.annotation.DefaultAnnotationHandlerMapping" />
	<bean
		class="org.springframework.web.servlet.mvc.annotation.AnnotationMethodHandlerAdapter" />

</beans>